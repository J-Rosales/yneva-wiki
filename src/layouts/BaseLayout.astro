---
const { title = "Yneva Wiki", layer = "default", breadcrumbs = [], canonicalHref = null, robots = null } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {canonicalHref && <link rel="canonical" href={canonicalHref} />}
    {robots && <meta name="robots" content={robots} />}
  </head>
  <body data-layer={layer} data-theme="light">
    <header class="site-header">
      <div class="site-header__brand">Yneva Wiki</div>
      <nav class="site-header__nav">
        <a href="/">Home</a>
        <a href="/search/">Advanced Search</a>
        <div class="site-header__search">
          <input id="nav-search" type="search" placeholder="Search..." autocomplete="off" />
          <div id="nav-search-results" class="nav-search-results" hidden></div>
        </div>
        <div class="site-header__controls">
          <button type="button" class="width-toggle" data-width="100">Full</button>
          <button type="button" class="width-toggle" data-width="50">1/2</button>
          <button type="button" class="width-toggle" data-width="33">1/3</button>
          <button type="button" class="width-toggle" data-width="25">1/4</button>
          <button type="button" class="theme-toggle" aria-label="Toggle dark mode">☀︎/☾</button>
        </div>
      </nav>
    </header>
    <div class="site-shell">
      <aside class="site-sidebar">
        <div class="site-sidebar__section">Navigation</div>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/search/">Advanced Search</a></li>
        </ul>
      </aside>
      <main class="site-main">
        {breadcrumbs.length > 0 && (
          <nav class="breadcrumbs">
            {breadcrumbs.map((b, i) => (
              <>
                {i > 0 && <span class="breadcrumbs__sep">/</span>}
                <a href={b.href}>{b.label}</a>
              </>
            ))}
          </nav>
        )}
        <slot />
      </main>
      <footer class="site-footer">
        <slot name="footer" />
      </footer>
    </div>
    <script>
      (function () {
        const body = document.body;
        const widthButtons = Array.from(document.querySelectorAll(".width-toggle"));
        const themeButton = document.querySelector(".theme-toggle");
        const searchInput = document.getElementById("nav-search");
        const searchResults = document.getElementById("nav-search-results");
        let pagefindPromise = null;

        function applyWidth(value) {
          body.style.setProperty("--body-width", value + "%");
          localStorage.setItem("bodyWidth", value);
          widthButtons.forEach((btn) => {
            btn.setAttribute("aria-pressed", btn.dataset.width === String(value));
          });
        }

        function applyTheme(theme) {
          body.setAttribute("data-theme", theme);
          localStorage.setItem("theme", theme);
        }

        const storedWidth = localStorage.getItem("bodyWidth");
        applyWidth(storedWidth ? Number(storedWidth) : 100);

        const storedTheme = localStorage.getItem("theme");
        if (storedTheme) {
          applyTheme(storedTheme);
        } else {
          const prefersDark = window.matchMedia && window.matchMedia("(prefers-color-scheme: dark)").matches;
          applyTheme(prefersDark ? "dark" : "light");
        }

        widthButtons.forEach((btn) => {
          btn.addEventListener("click", () => applyWidth(Number(btn.dataset.width)));
        });

        if (themeButton) {
          themeButton.addEventListener("click", () => {
            const next = body.getAttribute("data-theme") === "dark" ? "light" : "dark";
            applyTheme(next);
          });
        }

        function ensurePagefind() {
          if (window.pagefind) {
            return Promise.resolve(window.pagefind);
          }
          if (!pagefindPromise) {
            pagefindPromise = new Promise((resolve, reject) => {
              const script = document.createElement("script");
              script.src = "/pagefind/pagefind.js";
              script.onload = () => resolve(window.pagefind);
              script.onerror = () => reject(new Error("Pagefind failed to load"));
              document.head.appendChild(script);
            });
          }
          return pagefindPromise;
        }

        function clearResults() {
          if (!searchResults) return;
          searchResults.innerHTML = "";
          searchResults.hidden = true;
        }

        if (searchInput && searchResults) {
          searchInput.addEventListener("input", async () => {
            const q = searchInput.value.trim();
            if (!q) {
              clearResults();
              return;
            }
            const pagefind = await ensurePagefind();
            if (!pagefind) return;
            const searchResult = await pagefind.search(q);
            const data = await searchResult.results.slice(0, 6).map((r) => r.data());
            const items = await Promise.all(data);
            if (items.length === 0) {
              searchResults.innerHTML = "<div class=\"nav-search-empty\">No results</div>";
              searchResults.hidden = false;
              return;
            }
            searchResults.innerHTML = items
              .map((item) => `<a class=\"nav-search-item\" href=\"${item.url}\">${item.meta.title}</a>`)
              .join("");
            searchResults.hidden = false;
          });

          searchInput.addEventListener("blur", () => {
            setTimeout(clearResults, 150);
          });
        }
      })();
    </script>
  </body>
</html>

<style>
  :root {
    --bg: #f7f7f7;
    --surface: #ffffff;
    --text: #222;
    --border: #666;
    --accent: #7a6b00;
    --accent-soft: #e9dcc0;
    --accent-deep: #5c4a00;
    --body-width: 100%;
  }
  body[data-layer="solar"] {
    --accent: #c28a00;
    --accent-soft: #f6e6b6;
    --accent-deep: #8a5d00;
  }
  body[data-layer="academic"] {
    --accent: #2a78c8;
    --accent-soft: #d6e7fb;
    --accent-deep: #1c4f8c;
  }
  body[data-theme="dark"] {
    --bg: #141414;
    --surface: #1c1c1c;
    --text: #e6e6e6;
    --border: #888;
  }
  body {
    margin: 0;
    font-family: Georgia, "Times New Roman", serif;
    color: var(--text);
    background: var(--bg);
  }
  h1, h2, h3 {
    font-family: "Segoe UI", Tahoma, sans-serif;
  }
  a {
    color: var(--accent);
  }
  .site-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    border-bottom: 2px double var(--accent-deep);
    background: var(--surface);
  }
  .site-header__nav {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    flex-wrap: wrap;
  }
  .site-header__controls {
    display: flex;
    gap: 0.25rem;
    align-items: center;
  }
  .site-header__search {
    position: relative;
  }
  #nav-search {
    border: 1px solid var(--border);
    padding: 0.2rem 0.4rem;
    font-size: 0.85rem;
    background: var(--surface);
    color: var(--text);
  }
  .nav-search-results {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: var(--surface);
    border: 2px double var(--accent-deep);
    box-shadow: inset 0 0 0 6px var(--accent-soft);
    z-index: 10;
  }
  .nav-search-item {
    display: block;
    padding: 0.35rem 0.5rem;
    text-decoration: none;
  }
  .nav-search-item:hover {
    background: var(--accent-soft);
  }
  .nav-search-empty {
    padding: 0.35rem 0.5rem;
    color: #666;
  }
  .width-toggle,
  .theme-toggle {
    border: 1px solid var(--border);
    background: var(--surface);
    color: var(--text);
    padding: 0.2rem 0.4rem;
    cursor: pointer;
    font-size: 0.85rem;
  }
  .width-toggle[aria-pressed="true"] {
    border-color: var(--accent-deep);
    background: var(--accent-soft);
  }
  .site-shell {
    display: grid;
    grid-template-columns: 220px minmax(0, 1fr);
    gap: 1rem;
    padding: 1rem;
  }
  .site-sidebar {
    border-right: 2px double var(--accent-deep);
    padding-right: 1rem;
  }
  .site-main {
    background: var(--surface);
    padding: 1rem;
    border: 2px double var(--accent-deep);
    box-shadow: inset 0 0 0 8px var(--accent-soft);
    width: 100%;
    max-width: var(--body-width);
    justify-self: center;
  }
  .site-footer {
    background: var(--surface);
    border: 2px double var(--accent-deep);
    box-shadow: inset 0 0 0 8px var(--accent-soft);
    padding: 0.75rem 1rem;
    grid-column: 2;
    width: 100%;
    max-width: var(--body-width);
    justify-self: center;
  }
  .breadcrumbs {
    margin-bottom: 0.75rem;
  }
  .breadcrumbs__sep {
    margin: 0 0.4rem;
    color: #888;
  }
  h1::after {
    content: "";
    display: block;
    border-bottom: 2px solid var(--accent-deep);
    margin-top: 0.35rem;
  }
  h2::after {
    content: "";
    display: block;
    height: 1px;
    background: linear-gradient(90deg, var(--accent) 0%, transparent 100%);
    margin-top: 0.3rem;
  }
  h3::after {
    content: "";
    display: block;
    height: 1px;
    background: repeating-linear-gradient(90deg, var(--accent-soft), var(--accent-soft) 6px, transparent 6px, transparent 12px);
    margin-top: 0.3rem;
  }
  @media (max-width: 900px) {
    .site-shell {
      grid-template-columns: 1fr;
    }
    .site-sidebar {
      border-right: none;
      border-bottom: 2px double var(--accent-deep);
      padding-bottom: 0.75rem;
      margin-bottom: 0.75rem;
    }
    .site-footer {
      grid-column: 1;
    }
    .site-header__nav {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
