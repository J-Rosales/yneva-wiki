---
const { items, titleBySlug } = Astro.props;
---

<section class="related">
  <h2>Related content</h2>
  {items.length === 0 ? (
    <p>No related content available.</p>
  ) : (
    <ul>
      {items.map((slug) => (
        <li>
          <a href={`/wiki/${slug}/`}>{titleBySlug.get(slug) || `Missing: ${slug}`}</a>
        </li>
      ))}
    </ul>
  )}
</section>

<style>
  .related ul {
    margin: 0;
    padding-left: 1.2rem;
  }
</style>
